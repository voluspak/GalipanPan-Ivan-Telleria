---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Importar datos de galería
import galeriaData from '../content/galeria/data.json';

// Helper para determinar si es URL externa
const isExternalUrl = (url: string) => url.startsWith('http');
---

<BaseLayout
  title="Galeria"
  description="Galeria de fotos de los productos y servicios que brinda Galipan Pan"
>
  <Header />

  <main id="main-content" class="flex-1 bg-blaze-orange-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 max-w-7xl">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-12 text-heading">
        Galería
      </h1>

      <!-- Bento Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 auto-rows-[200px]">
        {galeriaData.map((foto, index) => {
          // Patrón de tamaños bento: algunos items ocupan más espacio
          const bentoClasses = [
            'col-span-2 row-span-2', // 0: Grande
            'col-span-1 row-span-1', // 1: Pequeño
            'col-span-1 row-span-2', // 2: Alto
            'col-span-2 row-span-1', // 3: Ancho
            'col-span-1 row-span-1', // 4: Pequeño
            'col-span-2 row-span-2', // 5: Grande
            'col-span-1 row-span-1', // 6: Pequeño
            'col-span-1 row-span-2', // 7: Alto
            'col-span-2 row-span-1', // 8: Ancho
            'col-span-1 row-span-1', // 9: Pequeño
            'col-span-2 row-span-2', // 10: Grande
          ];

          const sizeClass = bentoClasses[index % bentoClasses.length];

          return (
            <div class={`group relative overflow-hidden rounded-xl shadow-md hover:shadow-2xl hover:shadow-blaze-orange-600/20 transition-all duration-300 border border-blaze-orange-200 ${sizeClass}`}>
              {isExternalUrl(foto.img) ? (
                <img
                  src={foto.img}
                  alt={foto.nombre}
                  title={foto.nombre}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                  loading="lazy"
                />
              ) : (
                <Image
                  src={foto.img}
                  alt={foto.nombre}
                  title={foto.nombre}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                  width={600}
                  height={600}
                  loading="lazy"
                  quality={85}
                />
              )}
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
                <p class="text-white font-semibold text-base md:text-lg p-4">
                  {foto.nombre}
                </p>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
