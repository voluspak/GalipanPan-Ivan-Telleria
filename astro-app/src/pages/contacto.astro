---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Contacto"
  description="Formulario para contactarse con atención al cliente de Galipan Pan"
>
  <Header />

  <main id="main-content" class="flex-1">
    <div class="container mx-auto px-4 py-12 max-w-4xl">
      <!-- Texto de introducción -->
      <div class="text-center space-y-4 mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 font-[Courgette]">
          ¡Contáctanos!
        </h1>
        <p class="text-lg text-gray-600">
          Puedes dejarnos tus datos en el siguiente formulario<br />
          ¡Nos pondremos en contacto contigo en la brevedad!
        </p>
        <p class="text-lg text-gray-600">
          También nos puedes contactar via{' '}
          <a
            href="https://api.whatsapp.com/send?phone=573173934277"
            target="_blank"
            rel="noopener noreferrer"
            class="text-orange-500 hover:text-orange-600 font-medium inline-flex items-center gap-1 focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 rounded"
            aria-label="Contactar por Whatsapp (se abre en una nueva ventana)"
          >
            <i class="fa-brands fa-whatsapp" aria-hidden="true"></i>
            Whatsapp
          </a>
        </p>
      </div>

      <!-- Formulario -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 id="form-title" class="text-2xl font-bold text-center text-gray-800 mb-6">
          Dejanos tus datos de contacto
        </h2>

        <form class="space-y-6" aria-labelledby="form-title">
          <!-- Mensaje de error accesible (oculto hasta validación) -->
          <div id="form-errors" class="sr-only" aria-live="assertive" aria-atomic="true"></div>

          <!-- Nombre y Email -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="nombre" class="block text-sm font-medium text-gray-700 mb-2">
                Nombre <span class="text-red-500" aria-label="requerido">*</span>
              </label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                required
                autocomplete="name"
                aria-required="true"
                aria-invalid="false"
                aria-describedby="nombre-error"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                placeholder="Tu nombre"
              />
              <span id="nombre-error" class="text-red-500 text-sm mt-1 hidden" role="alert"></span>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email <span class="text-red-500" aria-label="requerido">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                autocomplete="email"
                aria-required="true"
                aria-invalid="false"
                aria-describedby="email-error"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                placeholder="tu@email.com"
              />
              <span id="email-error" class="text-red-500 text-sm mt-1 hidden" role="alert"></span>
            </div>
          </div>

          <!-- Motivo y Teléfono -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="motivo" class="block text-sm font-medium text-gray-700 mb-2">
                Motivo de Consulta <span class="text-red-500" aria-label="requerido">*</span>
              </label>
              <select
                id="motivo"
                name="motivo"
                required
                autocomplete="off"
                aria-required="true"
                aria-invalid="false"
                aria-describedby="motivo-error"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              >
                <option value="" disabled selected>Selecciona un motivo</option>
                <option value="consulta">Consulta</option>
                <option value="pedido-mayorista">Pedido Mayorista</option>
                <option value="franquicias">Franquicias</option>
                <option value="empleo">Búsqueda de empleo</option>
              </select>
              <span id="motivo-error" class="text-red-500 text-sm mt-1 hidden" role="alert"></span>
            </div>

            <div>
              <label for="telefono" class="block text-sm font-medium text-gray-700 mb-2">
                Teléfono <span class="text-red-500" aria-label="requerido">*</span>
              </label>
              <input
                type="tel"
                id="telefono"
                name="telefono"
                required
                autocomplete="tel"
                aria-required="true"
                aria-invalid="false"
                aria-describedby="telefono-error"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                placeholder="+57 123 456 7890"
              />
              <span id="telefono-error" class="text-red-500 text-sm mt-1 hidden" role="alert"></span>
            </div>
          </div>

          <!-- Comentario -->
          <div>
            <label for="comentario" class="block text-sm font-medium text-gray-700 mb-2">
              Comentario <span class="text-red-500" aria-label="requerido">*</span>
            </label>
            <textarea
              id="comentario"
              name="comentario"
              rows="5"
              required
              autocomplete="off"
              aria-required="true"
              aria-invalid="false"
              aria-describedby="comentario-error"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent resize-none"
              placeholder="Escribe aquí tu comentario..."
            ></textarea>
            <span id="comentario-error" class="text-red-500 text-sm mt-1 hidden" role="alert"></span>
          </div>

          <!-- Botones -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button
              type="submit"
              class="px-8 py-3 bg-orange-500 text-white font-medium rounded-lg hover:bg-orange-600 transition-colors focus:ring-2 focus:ring-orange-500 focus:ring-offset-2"
            >
              Enviar
            </button>
            <button
              type="reset"
              class="px-8 py-3 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 transition-colors focus:ring-2 focus:ring-gray-400 focus:ring-offset-2"
            >
              Restablecer
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
