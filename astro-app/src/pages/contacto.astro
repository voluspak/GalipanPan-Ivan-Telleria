---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Contacto"
  description="Formulario para contactarse con atención al cliente de Galipan Pan"
>
  <Header />

  <main class="flex-1">
    <div class="container mx-auto px-4 py-12 max-w-4xl">
      <!-- Texto de introducción -->
      <div class="text-center space-y-4 mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 font-[Courgette]">
          ¡Contáctanos!
        </h1>
        <p class="text-lg text-gray-600">
          Puedes dejarnos tus datos en el siguiente formulario<br />
          ¡Nos pondremos en contacto contigo en la brevedad!
        </p>
        <p class="text-lg text-gray-600">
          También nos puedes contactar via{' '}
          <a
            href="https://api.whatsapp.com/send?phone=573173934277"
            target="_blank"
            rel="noopener noreferrer"
            class="text-orange-500 hover:text-orange-600 font-medium inline-flex items-center gap-1"
          >
            <i class="fa-brands fa-whatsapp"></i>
            Whatsapp
          </a>
        </p>
      </div>

      <!-- Formulario -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">
          Dejanos tus datos de contacto
        </h2>

        <form class="space-y-6">
          <!-- Nombre y Email -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="nombre" class="block text-sm font-medium text-gray-700 mb-2">
                Nombre
              </label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                placeholder="Tu nombre"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                placeholder="tu@email.com"
              />
            </div>
          </div>

          <!-- Motivo y Teléfono -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="motivo" class="block text-sm font-medium text-gray-700 mb-2">
                Motivo de Consulta
              </label>
              <select
                id="motivo"
                name="motivo"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              >
                <option value="" disabled selected>Selecciona un motivo</option>
                <option value="consulta">Consulta</option>
                <option value="pedido-mayorista">Pedido Mayorista</option>
                <option value="franquicias">Franquicias</option>
                <option value="empleo">Búsqueda de empleo</option>
              </select>
            </div>

            <div>
              <label for="telefono" class="block text-sm font-medium text-gray-700 mb-2">
                Teléfono
              </label>
              <input
                type="tel"
                id="telefono"
                name="telefono"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                placeholder="+57 123 456 7890"
              />
            </div>
          </div>

          <!-- Comentario -->
          <div>
            <label for="comentario" class="block text-sm font-medium text-gray-700 mb-2">
              Comentario
            </label>
            <textarea
              id="comentario"
              name="comentario"
              rows="5"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent resize-none"
              placeholder="Escribe aqui tu comentario..."
            ></textarea>
          </div>

          <!-- Botones -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button
              type="submit"
              class="px-8 py-3 bg-orange-500 text-white font-medium rounded-lg hover:bg-orange-600 transition-colors"
            >
              Enviar
            </button>
            <button
              type="reset"
              class="px-8 py-3 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 transition-colors"
            >
              Restablecer
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
