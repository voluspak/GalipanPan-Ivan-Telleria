---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Carousel from "../components/Carousel.astro";

import panDeJamonImg from "../../public/assets/pan-de-jamón.webp";
import rol1Img from "../../public/assets/rol1.webp";
import cupcakeImg from "../../public/assets/cupcake.webp";
import rol2Img from "../../public/assets/rol2.webp";

const carouselImages = [
  {
    src: panDeJamonImg,
    alt: "Pan de jamon",
    title: "Pan de Jamon",
  },
  {
    src: rol1Img,
    alt: "Rol de canela",
    title: "Rol de canela",
  },
  {
    src: cupcakeImg,
    alt: "Cupcake",
    title: "Cupcake",
  },
  {
    src: rol2Img,
    alt: "Rol de canela",
    title: "Rol de Canela",
  },
];
---

<BaseLayout
  title="Inicio"
  description="Pagina principal de Galipan Pan. Venta de roles de canela y panaderia artesanal venezolana"
>
  <Header />

  <main id="main-content" class="flex-1">
    <!-- Hero Section -->
    <section
      class="relative h-[500px] sm:h-[600px] lg:h-[700px] flex items-center justify-center overflow-hidden"
    >
      <!-- Background Image Container -->
      <div class="absolute inset-0">
        <!-- Image wrapper with max width for large screens -->
        <div class="relative h-full w-full max-w-[1920px] mx-auto">
          <Image
            src={rol2Img}
            alt="Deliciosos roles de canela"
            title="Roles de Canela"
            class="h-full w-full object-cover object-center"
            loading="eager"
            width={1920}
            height={1080}
            quality={90}
          />
        </div>
        <!-- Overlay -->
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"
        >
        </div>
      </div>

      <!-- Content -->
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div
          class="flex flex-col items-center gap-6 max-w-3xl mx-auto text-center"
        >
          <h1
            class="text-4xl sm:text-5xl lg:text-6xl font-black leading-tight tracking-tighter text-white"
          >
            El mejor rol de canela que probarás
          </h1>
          <p class="text-lg sm:text-xl font-normal text-white/90">
            Disfruta de nuestros deliciosos roles de canela, hechos con
            ingredientes frescos y una receta secreta que te encantará.
          </p>
          <a
            href="/menu"
            class="mt-4 flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-full h-12 px-8 bg-primary text-white text-base font-bold shadow-2xl shadow-primary/40 hover:bg-primary/90 hover:scale-105 transition-all duration-300"
          >
            Ver Menú
          </a>
        </div>
      </div>
    </section>

    <!-- Pricing Section -->
    <section class="w-full py-16 bg-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
        <div class="max-w-xl mx-auto">
          <div
            class="bg-white border-2 border-primary rounded-xl p-8 shadow-xl text-center space-y-6"
          >
            <h2 class="text-3xl md:text-4xl font-bold text-zinc-900">
              Rollos de Canela
            </h2>
            <p class="text-2xl md:text-3xl text-zinc-700">
              <span class="text-primary font-bold">COP$19k</span> x 12 Rolls <br
              />
              <small class="text-2xl text-zinc-500">+ Delivery</small>
            </p>
            <a
              href="https://galipan-delivery-jst7i3eb3-voluspak.vercel.app/"
              class="inline-flex items-center justify-center rounded-full h-12 px-8 bg-primary text-white text-base font-bold shadow-lg shadow-primary/30 hover:bg-primary/90 hover:scale-105 transition-all duration-300"
            >
              Añadir al Carrito
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="bg-orange-500/80 py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div class="space-y-2">
            <h3 class="text-2xl md:text-3xl font-bold text-white">Rápido 🚀</h3>
            <p class="text-zinc-50">Entrega en tiempo récord</p>
          </div>
          <div class="space-y-2">
            <h3 class="text-2xl md:text-3xl font-bold text-white">
              Sencillo 😍
            </h3>
            <p class="text-zinc-50">Proceso fácil y rápido</p>
          </div>
          <div class="space-y-2">
            <h3 class="text-2xl md:text-3xl font-bold text-white">
              Del horno a tu mesa 🍞
            </h3>
            <p class="text-zinc-50">Siempre fresco y caliente</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Carousel Section -->
    <section class="w-full py-16 bg-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
        <h2
          class="text-3xl md:text-4xl font-bold text-center text-zinc-900 mb-12"
        >
          Nuestros Productos
        </h2>
        <div class="max-w-5xl mx-auto">
          <Carousel images={carouselImages} />
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
