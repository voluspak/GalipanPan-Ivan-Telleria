---
import { Image } from "astro:assets";
import logoImg from "../../public/assets/Logo.webp";

const currentPath = Astro.url.pathname;

const navLinks = [
  { href: "/menu", label: "Menú" },
  { href: "/sobre-nosotros", label: "Sobre Nosotros" },
  { href: "/contacto", label: "Contacto" },
  { href: "/galeria", label: "Galeria" },
  { href: "/delivery", label: "Pedido Online" },
];
---

<header class="sticky top-0 z-50 w-full bg-white backdrop-blur-sm shadow-sm">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8" aria-label="Navegación principal">
    <div class="flex items-center justify-between py-3">
      <!-- Logo -->
      <a href="/" class="flex-shrink-0" aria-label="Ir a la página de inicio">
        <Image
          src={logoImg}
          alt="Logo Galipan Pan"
          class=""
          width={124}
          height={124}
          loading="eager"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-6">
        <ul class="flex space-x-6" role="list">
          {
            navLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class:list={[
                    "text-sm font-medium transition-colors",
                    currentPath === link.href
                      ? "text-blaze-orange-600 font-bold"
                      : "text-zinc-600 hover:text-blaze-orange-600",
                  ]}
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
        <a
          href="/delivery"
          class="flex min-w-[84px] cursor-pointer items-center justify-center overflow-hidden rounded-full h-10 px-6 bg-blaze-orange-600 text-white text-sm font-bold shadow-lg shadow-blaze-orange-600/30 hover:bg-blaze-orange-700 transition-all duration-300 focus:ring-2 focus:ring-blaze-orange-500 focus:ring-offset-2"
          aria-label="Ir a pedido online"
        >
          Ordenar Ahora
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 rounded-lg bg-blaze-orange-600/20 text-blaze-orange-600 focus:ring-2 focus:ring-blaze-orange-500 focus:ring-offset-2"
        aria-label="Abrir menú de navegación"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            d="M4 6h16M4 12h16m-7 6h7"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="hidden lg:hidden pb-4"
      role="navigation"
      aria-label="Menú móvil"
    >
      <ul class="space-y-3">
        {
          navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class:list={[
                  "block text-sm font-medium transition-colors",
                  currentPath === link.href
                    ? "text-blaze-orange-600 font-bold"
                    : "text-zinc-700 hover:text-blaze-orange-600",
                ]}
              >
                {link.label}
              </a>
            </li>
          ))
        }
        <li>
          <a
            href="/delivery"
            class="text-center rounded-full h-10 px-6 bg-blaze-orange-600 text-white text-sm font-bold shadow-lg shadow-blaze-orange-600/30 hover:bg-blaze-orange-700 transition-all duration-300 flex items-center justify-center focus:ring-2 focus:ring-blaze-orange-500 focus:ring-offset-2"
            aria-label="Ir a pedido online"
          >
            Ordenar Ahora
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  // Toggle mobile menu with accessibility
  const button = document.getElementById("mobile-menu-button");
  const menu = document.getElementById("mobile-menu");

  function toggleMenu() {
    const isHidden = menu?.classList.contains("hidden");

    if (isHidden) {
      menu?.classList.remove("hidden");
      button?.setAttribute("aria-expanded", "true");
      button?.setAttribute("aria-label", "Cerrar menú de navegación");
    } else {
      menu?.classList.add("hidden");
      button?.setAttribute("aria-expanded", "false");
      button?.setAttribute("aria-label", "Abrir menú de navegación");
    }
  }

  button?.addEventListener("click", toggleMenu);

  // Close menu on Escape key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && !menu?.classList.contains("hidden")) {
      toggleMenu();
      button?.focus();
    }
  });

  // Close menu when clicking outside
  document.addEventListener("click", (e) => {
    if (!menu?.classList.contains("hidden") &&
        !menu?.contains(e.target as Node) &&
        !button?.contains(e.target as Node)) {
      toggleMenu();
    }
  });
</script>
