---
import { Image } from 'astro:assets';
import logoImg from '../../public/assets/Logo.webp';

const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/menu', label: 'Menú' },
  { href: '/sobre-nosotros', label: 'Sobre Nosotros' },
  { href: '/contacto', label: 'Contacto' },
  { href: '/galeria', label: 'Galeria' },
  { href: '/delivery', label: 'Pedido Online' }
];
---

<header class="w-full bg-gray-100 shadow-sm">
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between py-3">
      <!-- Logo -->
      <a href="/" class="flex-shrink-0">
        <Image
          src={logoImg}
          alt="Logo Galipan Pan"
          class="h-16 w-16 rounded-full object-cover"
          width={64}
          height={64}
          loading="eager"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-6">
        <ul class="flex space-x-6">
          {navLinks.map(link => (
            <li>
              <a
                href={link.href}
                class:list={[
                  "text-gray-700 hover:text-orange-500 transition-colors font-medium",
                  { "text-orange-500 font-bold": currentPath === link.href }
                ]}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        <a
          href="https://galipan-delivery-jst7i3eb3-voluspak.vercel.app/"
          class="bg-orange-500 text-white px-6 py-2 rounded-lg hover:bg-orange-600 transition-colors font-medium"
        >
          Delivery
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden flex flex-col space-y-1 p-2"
        aria-label="Menú"
      >
        <div class="w-6 h-0.5 bg-gray-700"></div>
        <div class="w-6 h-0.5 bg-gray-700"></div>
        <div class="w-6 h-0.5 bg-gray-700"></div>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden lg:hidden pb-4">
      <ul class="space-y-3">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                "block text-gray-700 hover:text-orange-500 transition-colors font-medium",
                { "text-orange-500 font-bold": currentPath === link.href }
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
        <li>
          <a
            href="https://galipan-delivery-jst7i3eb3-voluspak.vercel.app/"
            class="block bg-orange-500 text-white text-center px-6 py-2 rounded-lg hover:bg-orange-600 transition-colors font-medium"
          >
            Delivery
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  // Toggle mobile menu
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
